<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Cat谩logo</title>
  <link rel="stylesheet" href="/estilos.css" />
</head>

<body>
  <%
    const tipo = usuario ? usuario.tipo_usuario : null;

    const esAdmin        = (tipo === 'administrador');
    const esEmpleado     = (tipo === 'empleado');
    const esDesempleado  = (tipo === 'desempleado');
    const esCliente      = (tipo === 'cliente');
    const esAlmacen      = (tipo === 'almacen');
    const esRH           = (tipo === 'recursos_humanos');
    const esFacturacion  = (tipo === 'facturacion');
    const esCotizacion   = (tipo === 'cotizacion');

    //  Empleado y Cotizaci贸n solo lectura
    const puedeEditarCatalogo = esAdmin || esAlmacen;

    //  Formato dinero MX
    function formatoMX(n){
      if (n === null || n === undefined) return '';
      return Number(n).toLocaleString('es-MX', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
    }
  %>

  <main style="padding: 2rem; max-width: 2000px; margin:auto;"></main>

  <!-- NAVBAR -->
  <div class="nav">
    <a href="/catalogo" class="active">Cat谩logo</a>

    <% if (!esCliente && !esDesempleado) { %>
      <a href="/entradas">Entradas</a>
    <% } %>

    <% if (!esDesempleado) { %>
      <a href="/inventario">Inventario</a>
    <% } %>

    <% if (!esCliente && !esDesempleado) { %>
      <a href="/salidas">Salidas</a>
      <a href="/clientes">Clientes</a>
      <a href="/cotizaciones">Cotizaciones</a>
    <% } %>

    <% if (esAdmin || esFacturacion) { %>
      <a href="/facturacion">Facturaci贸n</a>
    <% } %>

    <% if (esAdmin || esRH) { %>
      <a href="/usuarios">Usuarios</a>
    <% } %>
  </div>

  <!-- CONTENEDOR PRINCIPAL -->
  <main class="contenedor">
    <h2>Cat谩logo de Medicamentos</h2>

    <form action="/catalogo/buscar" method="GET" style="margin-bottom: 1rem;">
      <label for="q">Buscar por Clave, Clave SSA o Nombre:</label>
      <input
        type="text"
        name="q"
        id="q"
        required
        placeholder="Ej: 010.000.1234.00, AAB12345, Paracetamol"
        value="<%= typeof q !== 'undefined' ? q : '' %>">
      <button type="submit" class="btn btn-secundario">Buscar</button>
      <a href="/catalogo" class="btn btn-exito">Mostrar todas</a>
    </form>

    <% if (puedeEditarCatalogo) { %>
      <a href="/catalogo/nuevo" class="btn btn-exito">Agregar nuevo medicamento</a>
    <% } %>

    <table border="1" cellpadding="10" cellspacing="0"
           style="width:100%; background:white; border-radius:10px; border-collapse:collapse;">
      <thead>
        <tr style="background-color:#f5f5f5%;">
          <th>Clave</th>
          <th>Nombre</th>
          <th>Presentaci贸n</th>
          <th>Clave SSA</th>
          <th>Precio Venta</th>
          <th>Costo Unitario</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% if (catalogo && catalogo.length > 0) { %>
          <% catalogo.forEach(function(med){ %>
            <tr>
              <td><%= med.clave_catalogo %></td>
              <td><%= med.nombreProdu_catalogo %></td>
              <td><%= med.presentacion_catalogo %></td>
              <td><%= med.claveSSA_catalogo %></td>

              <!--  FORMATO MX -->
              <td>$<%= formatoMX(med.precioVenta_catalogo) %></td>
              <td>$<%= formatoMX(med.costoUnitario_catalogo) %></td>

              <td>
                <% if (puedeEditarCatalogo) { %>
                  <div style="display:flex; gap:1rem; justify-content:center;">
                    <a href="/catalogo/editar/<%= med.id_catalogo %>" class="btn btn-secundario">Editar</a>

                    <form action="/catalogo/eliminar/<%= med.id_catalogo %>" method="POST" style="margin:0;"
                      onsubmit="return confirm('驴Seguro que quieres eliminar este medicamento?');">
                      <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                  </div>
                <% } else { %>
                  <span style="color: gray;">Sin permisos</span>
                <% } %>
              </td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="7" style="text-align:center;">
              No hay medicamentos registrados
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </main>

  <a href="/logout" class="btn-logout">Cerrar sesi贸n</a>
</body>
</html>
