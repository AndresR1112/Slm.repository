<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Clientes</title>
  <link rel="stylesheet" href="/estilos.css" />
  <link rel="icon" type="image/png" href="/favicon.png">
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
</head>

<body>
  <main style="padding: 2rem; max-width: 2000px; margin:auto;"></main>

  <%
    const tipo = usuario ? usuario.tipo_usuario : null;

    const esAdmin       = (tipo === 'administrador');
    const esEmpleado    = (tipo === 'empleado');
    const esAlmacen     = (tipo === 'almacen');
    const esRH          = (tipo === 'recursos_humanos');
    const esFact        = (tipo === 'facturacion');
    const esCliente     = (tipo === 'cliente');
    const esDesempleado = (tipo === 'desempleado');
    const esCotizacion  = (tipo === 'cotizacion');

    // Admin + Almacén + Facturación pueden AGREGAR / EDITAR / ELIMINAR clientes
    const puedeGestionarClientes = esAdmin || esAlmacen || esFact;
  %>

  <!-- NAVBAR -->
  <div class="nav">
    <a href="/catalogo">Catálogo</a>

    <% if (!esCliente && !esDesempleado) { %>
      <a href="/entradas">Entradas</a>
      <a href="/inventario">Inventario</a>
      <a href="/salidas">Salidas</a>
      <a href="/clientes" class="active">Clientes</a>
      <a href="/cotizaciones">Cotizaciones</a>
    <% } else if (esCliente) { %>
      <!-- Cliente: solo Catálogo e Inventario -->
      <a href="/inventario">Inventario</a>
    <% } %>

    <!-- Facturación solo Admin y Facturación -->
    <% if (esAdmin || esFact) { %>
      <a href="/facturacion">Facturación</a>
    <% } %>

    <!-- Usuarios solo Admin y RH -->
    <% if (esAdmin || esRH) { %>
      <a href="/usuarios">Usuarios</a>
    <% } %>
  </div>

  <!-- CONTENEDOR PRINCIPAL -->
  <main class="contenedor">
    <h2>Listado de Clientes</h2>

    <% if (esDesempleado || esCliente) { %>
      <p style="text-align:center; margin-top:2rem; opacity:.7;">
        No tienes permisos para ver el listado de clientes.
      </p>
    <% } else { %>

      <!-- Botones superiores -->
      <div style="display:flex; gap:0.75rem; margin-bottom:1rem; align-items:center;">
        <% if (puedeGestionarClientes) { %>
          <a href="/clientes/nuevo" class="btn">Agregar Cliente</a>
        <% } %>

        <!-- Exportar Excel -->
        <a href="/clientes/exportar" class="btn btn3">
          Exportar a Excel
        </a>
      </div>

      <table>
        <thead>
          <tr>
            <th>Nombre</th>
            <th>RFC</th>
            <th>Dirección</th>
            <th>Teléfono</th>
            <th>Correo</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% if (!clientes || clientes.length === 0) { %>
            <tr>
              <td colspan="6" style="text-align:center; opacity:.7;">No hay clientes registrados</td>
            </tr>
          <% } else { %>
            <% clientes.forEach(c => { 
                 const es3plCliente =
                   c.Es3PL === 1 ||
                   c.Es3PL === '1' ||
                   c.Es3PL === true ||
                   c.Es3PL === 'true';
            %>
              <tr class="<%= es3plCliente ? 'fila-3pl' : '' %>">
                <td>
                  <%= c.Nombre %>
                  <% if (es3plCliente) { %>
                    <span class="badge-3pl">3PL</span>
                  <% } %>
                </td>
                <td><%= c.RFC %></td>
                <td><%= c.Direccion %></td>
                <td><%= c.Telefono %></td>
                <td><%= c.Correo %></td>
                <td>
                  <% if (puedeGestionarClientes) { %>
                    <div style="display:flex; gap:1rem; justify-content:center;">
                      <a href="/clientes/editar/<%= c.Id %>" class="btn btn-secundario">Editar</a>
                      <form
                        action="/clientes/eliminar/<%= c.Id %>"
                        method="POST"
                        style="margin:0;"
                        onsubmit="return confirm('¿Seguro que deseas eliminar este cliente? Esta acción también puede afectar sus salidas relacionadas.');">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                      </form>
                    </div>
                  <% } else { %>
                    <span style="color: gray;">Solo lectura</span>
                  <% } %>
                </td>
              </tr>
            <% }); %>
          <% } %>
        </tbody>
      </table>
    <% } %>
  </main>

  <a href="/logout" class="btn-logout">Cerrar sesión</a>

</body>
</html>
