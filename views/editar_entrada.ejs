<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= editar ? 'Editar Entrada' : 'Nueva Entrada' %></title>
  <link rel="stylesheet" href="/estilos.css" />
</head>
<body>
  <main class="contenedor">
    <h2><%= editar ? 'Editar Entrada' : 'Agregar Nueva Entrada' %></h2>

    <form
      action="<%= editar ? ('/entradas/editar/' + entrada.Id) : '/entradas/nueva' %>"
      method="POST"
      style="display:flex; flex-direction: column; gap: 1rem; background-color: white; padding: 2rem; border-radius: 10px;"
    >

      <!-- Fecha -->
      <label for="Fecha_de_entrada">Fecha de Entrada:</label>
      <input
        type="date"
        name="Fecha_de_entrada"
        id="Fecha_de_entrada"
        value="<%= entrada.Fecha ? new Date(entrada.Fecha).toISOString().slice(0,10) : new Date().toISOString().slice(0,10) %>"
        required
      />

      <!-- Proveedor -->
      <label for="Proveedor">Proveedor:</label>
      <input
        type="text"
        name="Proveedor"
        id="Proveedor"
        value="<%= entrada.Proveedor || '' %>"
        required
      />

      <!-- Producto -->
      <label for="Producto">Producto:</label>
      <select name="Producto" id="Producto" required>
        <option value="">-- Selecciona un producto --</option>
        <% productos.forEach(p => { %>
          <option
            value="<%= p.id_catalogo %>"
            <%= Number(entrada.ProductoId) === Number(p.id_catalogo) ? 'selected' : '' %>>
            <%= p.nombreProdu_catalogo %> (<%= p.clave_catalogo %>)
          </option>
        <% }) %>
      </select>

      <!-- Lote -->
      <label for="Lote">Lote:</label>
      <input
        type="text"
        name="Lote"
        id="Lote"
        value="<%= entrada.Lote || '' %>"
        required
      />

      <!-- Caducidad -->
      <label for="Caducidad">Caducidad:</label>
      <input
        type="date"
        name="Caducidad"
        id="Caducidad"
        value="<%= entrada.Caducidad ? new Date(entrada.Caducidad).toISOString().slice(0,10) : '' %>"
        required
      />

      <!-- Cantidad -->
      <label for="Cantidad">Cantidad:</label>
      <input
        type="number"
        name="Cantidad"
        id="Cantidad"
        value="<%= entrada.Cantidad || '' %>"
        min="1"
        required
      />

      <!-- Costo total -->
      <label for="Costo_Total">Costo Total:</label>
      <input
        type="number"
        name="Costo_Total"
        id="Costo_Total"
        step="0.01"
        value="<%= entrada.CostoTotal || '' %>"
        min="0"
        required
      />

      <!-- Botones -->
      <div class="botones" style="display:flex; gap:1rem;">
        <button type="submit" class="btn btn-exito">
          <%= editar ? 'Actualizar Entrada' : 'AÃ±adir Entrada' %>
        </button>
        <a href="/entradas" class="btn btn-secundario">Cancelar</a>
      </div>
    </form>
  </main>
</body>
</html>
