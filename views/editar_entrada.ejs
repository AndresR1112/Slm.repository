<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= editar ? 'Editar Entrada' : 'Nueva Entrada' %></title>
  <link rel="stylesheet" href="/estilos.css" />
</head>
<body>
  <main class="contenedor">
    <h2><%= editar ? 'Editar Entrada' : 'Agregar Nueva Entrada' %></h2>

    <form
      action="<%= editar ? ('/entradas/editar/' + entrada.Id) : '/entradas/nueva' %>"
      method="POST"
      style="display:flex; flex-direction: column; gap: 1rem; background-color: white; padding: 2rem; border-radius: 10px;"
    >

      <!-- Fecha -->
      <label for="Fecha_de_entrada">Fecha de Entrada:</label>
      <input
        type="date"
        name="Fecha_de_entrada"
        id="Fecha_de_entrada"
        value="<%= entrada.Fecha ? new Date(entrada.Fecha).toISOString().slice(0,10) : new Date().toISOString().slice(0,10) %>"
        required
      />

      <!-- Proveedor -->
      <label for="Proveedor">Proveedor:</label>
      <input
        type="text"
        name="Proveedor"
        id="Proveedor"
        value="<%= entrada.Proveedor || '' %>"
        required
      />

      <!-- PRODUCTO -->
      <label for="Producto">Producto:</label>

      <!-- botones de ordenamiento -->
      <div class="orden-productos">
        <button type="button" id="ordenClave" class="btn btn3">Clave ↑/↓</button>
        <button type="button" id="ordenNombre" class="btn btn3">Nombre A–Z</button>
      </div>

      <select name="Producto" id="Producto" required>
        <option value="">-- Selecciona un producto --</option>
        <% productos.forEach(p => { %>
          <option
            value="<%= p.id_catalogo %>"
            data-clave="<%= p.clave_catalogo %>"
            data-nombre="<%= p.nombreProdu_catalogo %>"
            <%= Number(entrada.ProductoId) === Number(p.id_catalogo) ? 'selected' : '' %>>
            (<%= p.clave_catalogo %>) <%= p.nombreProdu_catalogo %>
          </option>
        <% }) %>
      </select>

      <!-- Lote -->
      <label for="Lote">Lote:</label>
      <input
        type="text"
        name="Lote"
        id="Lote"
        value="<%= entrada.Lote || '' %>"
        required
      />

      <!-- Caducidad -->
      <label for="Caducidad">Caducidad:</label>
      <input
        type="date"
        name="Caducidad"
        id="Caducidad"
        value="<%= entrada.Caducidad ? new Date(entrada.Caducidad).toISOString().slice(0,10) : '' %>"
        required
      />

      <!-- Cantidad -->
      <label for="Cantidad">Cantidad:</label>
      <input
        type="number"
        name="Cantidad"
        id="Cantidad"
        value="<%= entrada.Cantidad || '' %>"
        min="1"
        required
      />

      <!-- Costo total -->
      <label for="Costo_Total">Costo Total:</label>
      <input
        type="number"
        name="Costo_Total"
        id="Costo_Total"
        step="0.01"
        value="<%= entrada.CostoTotal || '' %>"
        min="0"
        required
      />

      <!-- Botones -->
      <div class="botones" style="display:flex; gap:1rem;">
        <button type="submit" class="btn btn-exito">
          <%= editar ? 'Actualizar Entrada' : 'Añadir Entrada' %>
        </button>
        <a href="/entradas" class="btn btn-secundario">Cancelar</a>
      </div>
    </form>
  </main>

  <!-- script ordenamiento dinámico -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const select = document.getElementById("Producto");
      const btnClave = document.getElementById("ordenClave");
      const btnNombre = document.getElementById("ordenNombre");

      if (!select || !btnClave || !btnNombre) return;

      const opcionesOriginales = Array.from(select.querySelectorAll("option"));
      let ascClave = true;

      btnClave.addEventListener("click", () => {
        const opciones = opcionesOriginales.slice(1);
        opciones.sort((a, b) => {
          const ca = a.dataset.clave || "";
          const cb = b.dataset.clave || "";
          return ascClave
            ? ca.localeCompare(cb, "es", { numeric: true })
            : cb.localeCompare(ca, "es", { numeric: true });
        });
        ascClave = !ascClave;
        actualizar(opciones);
      });

      btnNombre.addEventListener("click", () => {
        const opciones = opcionesOriginales.slice(1);
        opciones.sort((a, b) =>
          (a.dataset.nombre || "").localeCompare(b.dataset.nombre || "", "es")
        );
        actualizar(opciones);
      });

      function actualizar(lista) {
        const sel = select.value;
        select.innerHTML = "";
        select.appendChild(opcionesOriginales[0]); // "--Selecciona--"
        lista.forEach(o => select.appendChild(o));
        select.value = sel;
      }
    });
  </script>
</body>
</html>
