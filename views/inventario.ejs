    <h2>Inventario Actual</h2>
    
    <table>
      <thead>
        <tr>
          <th>Producto</th>
          <th>Lote</th>
          <th>Stock</th>
          <th>Caducidad</th>
          <th>DÃ­as Restantes</th>
          <th>Estado</th>
        </tr>
      </thead>

      
      <tbody>
        <% inventario.forEach(i => { %>
          <tr>
            <td><%= i.ProductoNombre %></td>
            <td><%= i.Lote %></td>
            <td><%= i.Stock %></td>
