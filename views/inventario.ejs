<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Inventario</title>
  <link rel="stylesheet" href="/estilos.css" />
  <link rel="icon" type="image/png" href="/favicon.png">
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
</head>

<body>

  <main style="padding: 2rem; max-width: 2000px; margin:auto;"></main>

  <% 
    // ===== Normalizar tipo de usuario (igual que en usuarios) =====
    var tipoRaw  = (usuario && usuario.tipo_usuario) ? usuario.tipo_usuario : '';
    var tipoNorm = tipoRaw.toString().trim().toLowerCase().replace(/\s+/g, '_');

    var esAdmin       = (tipoNorm === 'administrador');
    var esEmpleado    = (tipoNorm === 'empleado');
    var esAlmacen     = (tipoNorm === 'almacen');
    var esRH          = (tipoNorm === 'recursos_humanos');
    var esFact        = (tipoNorm === 'facturacion');
    var esCliente     = (tipoNorm === 'cliente');
    var esDesempleado = (tipoNorm === 'desempleado');

    // Helper para mostrar cantidades con separador de miles (sin decimales)
    function formatoEnteroMX(n) {
      if (n === null || n === undefined) return '';
      return Number(n).toLocaleString('es-MX');
    }
  %>

  <!-- NAVBAR (mismo patr칩n que usuarios / cotizaciones) -->
  <div class="nav">
    <a href="/catalogo">Cat치logo</a>

    <% if (esCliente) { %>
      <!-- Cliente: solo Cat치logo e Inventario -->
      <a href="/inventario" class="active">Inventario</a>
    <% } else if (!esDesempleado) { %>
      <!-- Todos los dem치s (menos desempleado) -->
      <a href="/entradas">Entradas</a>
      <a href="/inventario" class="active">Inventario</a>
      <a href="/salidas">Salidas</a>
      <a href="/clientes">Clientes</a>
      <a href="/cotizaciones">Cotizaciones</a>
    <% } %>

    <!-- Facturaci칩n solo Admin y Facturaci칩n -->
    <% if (esAdmin || esFact) { %>
      <a href="/facturacion">Facturaci칩n</a>
    <% } %>

    <!-- Usuarios solo Admin y RH -->
    <% if (esAdmin || esRH) { %>
      <a href="/usuarios">Usuarios</a>
    <% } %>
  </div>

  <!-- CONTENIDO PRINCIPAL -->
  <main class="contenedor">
    <% if (esDesempleado) { %>
      <h2>Inventario</h2>
      <p style="text-align:center; margin-top:2rem; opacity:.7;">
        No tienes permisos para ver el inventario.
      </p>
    <% } else { %>

      <!-- Bot칩n compartir inventario -->
      <div style="display:flex; justify-content:flex-end; margin-bottom:1rem;">
        <a href="/reporte" target="_blank" class="btn btn3">
          游늯 Compartir Inventario
        </a>
      </div>

      <h2>Inventario Actual</h2>

      <table>
        <thead>
          <tr>
            <th>Producto</th>
            <th>Lote</th>
            <th>Stock</th>
            <th>Caducidad</th>
            <th>D칤as Restantes</th>
            <th>Estado</th>
          </tr>
        </thead>

        <tbody>
          <% if (inventario && inventario.length > 0) { %>
            <% inventario.forEach(function(i) { 
                 // 3PL: si tiene id_cliente_propietario, se pinta igual que Entradas / Clientes
                 var es3PL = !!i.id_cliente_propietario;

                 // D칤as restantes (puede venir con dos nombres)
                 var dias = null;
                 if (i.diasRestantes_inventario !== null && i.diasRestantes_inventario !== undefined && i.diasRestantes_inventario !== '') {
                   dias = i.diasRestantes_inventario;
                 } else if (i.DiasRestantes !== null && i.DiasRestantes !== undefined && i.DiasRestantes !== '') {
                   dias = i.DiasRestantes;
                 }

                 // Determinar clase y texto de estado seg칰n d칤as
                 var claseEstado = '';
                 var textoEstado = '';

                 if (dias === null || dias === undefined || dias === '') {
                   claseEstado = '';
                   textoEstado = '-';
                 } else if (Number(dias) < 0) {
                   claseEstado = 'estado-rojo';
                   textoEstado = 'Vencido';
                 } else if (Number(dias) <= 30) {
                   claseEstado = 'estado-amarillo';
                   textoEstado = 'Pr칩ximo a vencer';
                 } else {
                   claseEstado = 'estado-verde';
                   textoEstado = 'Vigente';
                 }
            %>
              <tr class="<%= es3PL ? 'fila-3pl' : '' %>">
                <td>
                  <%= i.ProductoNombre %>
                  <% if (es3PL) { %>
                    <span class="badge-3pl">3PL</span>
                  <% } %>
                </td>

                <td><%= i.lote_inventario %></td>

                <!-- Stock con separador de miles -->
                <td><%= formatoEnteroMX(i.stock_inventario) %></td>

                <!-- Fecha de caducidad -->
                <td>
                  <% if (i.caducidad_inventario) { %>
                    <%= new Date(i.caducidad_inventario).toLocaleDateString(
                          'es-MX',
                          { day: '2-digit', month: '2-digit', year: 'numeric' }
                        ) %>
                  <% } else { %>
                    -
                  <% } %>
                </td>

                <!-- D칤as restantes -->
                <td>
                  <% if (dias !== null && dias !== undefined && dias !== '') { %>
                    <%= dias %> d칤as
                  <% } else { %>
                    -
                  <% } %>
                </td>

                <!-- Estado con color -->
                <td class="<%= claseEstado %>">
                  <%= textoEstado %>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="6" style="text-align:center;">No hay productos en inventario</td>
            </tr>
          <% } %>
        </tbody>
      </table>

    <% } %>
  </main>

  <a href="/logout" class="btn-logout">Cerrar sesi칩n</a>
</body>

</html>
